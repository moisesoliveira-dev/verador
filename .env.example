# Configuração do Servidor
PORT=3000
NODE_ENV=development

# CORS - URLs permitidas (use * para desenvolvimento, URLs específicas para produção)
CORS_ORIGIN=*

# Configurações do Chatbot Verador
# Para desenvolvimento, copie este arquivo para .env e preencha os valores

# Porta do servidor
PORT=3000

# Ambiente
NODE_ENV=development

# URL base da API do GOSAC
GOSAC_API_URL=https://api.gosac.com

# Chave de API do GOSAC
GOSAC_API_KEY=sua_chave_api_aqui

# Configurações de rate limiting
THROTTLER_TTL=60000
THROTTLER_LIMIT=30

# Configurações do banco de dados (para implementação futura)
# DATABASE_URL=postgresql://user:password@localhost:5432/verador
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=postgres
# DATABASE_PASSWORD=password
# DATABASE_NAME=verador

# Configurações de logs
LOG_LEVEL=debug

# Configuração do Banco de Dados PostgreSQL (Railway)
# Substitua pelos dados da sua instância do Railway
DATABASE_URL=postgresql://username:password@host:port/database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=verador_chatbot
DB_SSL=true

# Configuração de Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=30

# Configuração de Logs
LOG_LEVEL=debug

# Configuração do Chatbot
CHATBOT_DEBOUNCE_TIME=2000
CHATBOT_MAX_ATTEMPTS=3
CHATBOT_CONVERSATION_TIMEOUT=1800000

# Webhook Security (para verificar assinaturas dos webhooks)
WEBHOOK_SECRET=your_webhook_secret_here

# Railway específico (será preenchido automaticamente no deploy)
RAILWAY_ENVIRONMENT=production
